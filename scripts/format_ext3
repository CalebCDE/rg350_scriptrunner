#!/bin/sh
# title=Format SD Card (EXT3) CAUTION!
# desc=Format the external sd card [ext3]. This is DANGEROUS, all content in sd card will be erased.
# author=Rafa Vico

echo "Umounting SD Card"
umount -f /media/sdcard
echo "Erasing and partitioning SD Card"
echo -e "o\nn\np\n1\n\n\nw" | fdisk /dev/mmcblk1
echo "Formating SD Card"
mkfs -t vfat /dev/mmcblk1p1
mkfs -t ext3 /dev/mmcblk1p1
echo "EXT3 formating finished"
echo "Mounting SD Card"
mount -o remount,rw /media
mkdir -p /media/sdcard
mount -t ext3 -o rw /dev/mmcblk1p1 /media/sdcard
chmod 0777 -R /media/sdcard
mount -o remount,ro /media
echo "END"

